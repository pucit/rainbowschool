@model School_Management_System.Models.class_subject
           
           @{
    
    Layout = "../Shared/Layout_1.cshtml";
    
    }

@{
    ViewBag.Title = "subclassCreate";
    School_Management_System.Models.schooldbEntities db = new School_Management_System.Models.schooldbEntities();
    List<SelectListItem> Ls = new List<SelectListItem>();
    var list = (from temp in db.subjects select temp).ToList();
    foreach (var item in list)
    {
        Ls.Add(new SelectListItem() { Text = item.subjectName, Value = item.subjectId.ToString() });
    }
}

<h2>subclassCreate</h2>
<br /><br />

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>class_subject</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.subjectId)
        </div>
        <br />
        <div class="editor-field">
            @Html.DropDownList("subjectId",Ls)
            @Html.ValidationMessageFor(model => model.subjectId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.classId)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.classId)
            @Html.ValidationMessageFor(model => model.classId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.totalMarks)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.totalMarks)
            @Html.ValidationMessageFor(model => model.totalMarks)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.passingMarks)
        </div>
        <br />
        <div class="editor-field">
            @Html.EditorFor(model => model.passingMarks)
            @Html.ValidationMessageFor(model => model.passingMarks)
        </div>
        <br /><br />
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

