@model School_Management_System.Models.fee

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<font color="blue">Family ID: &nbsp&nbsp&nbsp&nbsp @ViewBag.id</font>
<br /><br />

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Fees</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Month)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Month, new List<SelectListItem> { 
           new SelectListItem{ Selected = ViewBag.month == "January", Text = "January", Value = "January"},
           new SelectListItem{ Selected = ViewBag.month == "Februray", Text = "Februray", Value = "Februray"},
           new SelectListItem{ Selected = ViewBag.month == "March", Text = "March", Value = "March"},
           new SelectListItem{ Selected = ViewBag.month == "April", Text = "April", Value = "April"},
           new SelectListItem{ Selected = ViewBag.month == "May", Text = "May", Value = "May"},
           new SelectListItem{ Selected = ViewBag.month == "June", Text = "June", Value = "June"},
           new SelectListItem{ Selected = ViewBag.month == "July", Text = "July", Value = "July"},
           new SelectListItem{ Selected = ViewBag.month == "August", Text = "August", Value = "August"},
           new SelectListItem{ Selected = ViewBag.month == "September", Text = "September", Value = "September"},
           new SelectListItem{ Selected = ViewBag.month == "October", Text = "October", Value = "October"},
           new SelectListItem{ Selected = ViewBag.month == "November", Text = "November", Value = "November"},
           new SelectListItem{ Selected = ViewBag.month == "December", Text = "December", Value = "December"},
           })
            @Html.ValidationMessageFor(model => model.Month)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Year)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Year, new List<SelectListItem> {
           new SelectListItem{ Selected = ViewBag.year == "2012", Text = "2012", Value = "2012"}, 
           new SelectListItem{ Selected = ViewBag.year == "2013", Text = "2013", Value = "2013"},
           new SelectListItem{ Selected = ViewBag.year == "2014", Text = "2014", Value = "2014"},
           new SelectListItem{ Selected = ViewBag.year == "2015", Text = "2015", Value = "2015"},
           new SelectListItem{ Selected = ViewBag.year == "2016", Text = "2016", Value = "2016"},
           new SelectListItem{ Selected = ViewBag.year == "2017", Text = "2017", Value = "2017"},
           new SelectListItem{ Selected = ViewBag.year == "2018", Text = "2018", Value = "2018"},
           new SelectListItem{ Selected = ViewBag.year == "2019", Text = "2019", Value = "2019"},
           new SelectListItem{ Selected = ViewBag.year == "2020", Text = "2020", Value = "2020"},
           new SelectListItem{ Selected = ViewBag.year == "2021", Text = "2021", Value = "2021"},
           new SelectListItem{ Selected = ViewBag.year == "2022", Text = "2022", Value = "2022"},
           new SelectListItem{ Selected = ViewBag.year == "2023", Text = "2023", Value = "2023"},
           })
            @Html.ValidationMessageFor(model => model.Year)
        </div>
        <br /><br />
        <font color="blue">Total Fee: &nbsp&nbsp&nbsp&nbsp @ViewBag.sum</font>
        <br />
        <font color="blue">Discount: &nbsp&nbsp&nbsp&nbsp @ViewBag.discount</font>
        <br />
        <font color="blue">Net Fee: &nbsp&nbsp&nbsp&nbsp @ViewBag.netFee</font>
        <br />

        <div class="editor-label">
            @Html.LabelFor(model => model.Is_Paid)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Is_Paid)
            @Html.ValidationMessageFor(model => model.Is_Paid)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to index", "../Home/Family")
</div>

